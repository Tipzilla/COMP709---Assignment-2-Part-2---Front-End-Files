<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header containing back arrow and title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Back arrow"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:paddingEnd="8dp"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="User Profiles"
            android:textSize="32sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Button for language selection, aligned to the right -->
    <Button
        android:id="@+id/button_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:backgroundTint="#D4AF37"
        android:padding="8dp"
        android:text="âœ” English" />

    <!-- First User Profile -->
    <TextView
        android:id="@+id/text_name_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Name: [first person's name]"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text_role_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Role: [first person's role]"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text_phone_contact_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Phone Contact: [first person's phone number]"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text_description_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Description: [first person's description]"
        android:textSize="18sp" />

    <!-- Margin between profiles -->
    <View
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <!-- Second User Profile -->
    <TextView
        android:id="@+id/text_name_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="Name: [second person's name]"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text_role_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Role: [second person's role]"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text_phone_contact_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Phone Contact: [second person's phone number]"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text_description_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Description: [second person's description]"
        android:textSize="18sp" />

</LinearLayout>
