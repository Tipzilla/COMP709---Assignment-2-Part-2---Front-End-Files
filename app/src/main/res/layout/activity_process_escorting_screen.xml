<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header containing back arrow and title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Back arrow"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:paddingEnd="8dp"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Process Escorting"
            android:textSize="32sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Button for language selection, aligned to the right -->
    <Button
        android:id="@+id/button_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:backgroundTint="#D4AF37"
        android:padding="8dp"
        android:text="âœ” English" />

    <!-- Main title for legal rights -->
    <TextView
        android:id="@+id/title_process_escorting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="The Process of Escorting"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Subtitle summarizing legal rights -->
    <TextView
        android:id="@+id/subtitle_step_by_step_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Step-by-Step Guide"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Description providing context about risk assessment -->
    <TextView
        android:id="@+id/description_risk_assessment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Assessment of Risk: A risk assessment is conducted when an environment is identified as a potential threat to the well-being of tamariki or rangatahi. This assessment determines whether the escorting is necessary."
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <!-- Description providing context about custodianship -->
    <TextView
        android:id="@+id/description_custodianship"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Custodianship by Oranga Tamariki: Pranga Tamariki becomes the custodians of the children when escorting is initiated."
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <!-- Description providing context about authority for escorting -->
    <TextView
        android:id="@+id/description_authority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Authority for Escorting: Escorting must be authorised by a designated authority figure."
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <!-- Title for further information resources -->
    <TextView
        android:id="@+id/title_further_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Links for Further Information"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Description for Oranga Tamariki resource -->
    <TextView
        android:id="@+id/description_oranga_tamariki"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Oranga Tamariki - Process of Escorting"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <!-- Description for Community Law resource -->
    <TextView
        android:id="@+id/description_community_law"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Community Law - Escorting Process Resources"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <!-- Empty View to push the button to the bottom -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Button to test knowledge through quiz -->
    <Button
        android:id="@+id/button_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#4CAF50"
        android:padding="12dp"
        android:text="Test your knowledge: Quiz"
        android:textColor="@android:color/white" />
</LinearLayout>
